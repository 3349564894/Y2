<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yq.crm.mapper.UserMapper">

    <resultMap id="role_resultMap" type="User">
       <id property="usrId" column="usr_id"/>
        <result property="usrName" column="usr_name"/>
        <result property="usrPassword" column="usr_password"/>
        <result property="usrRoleId" column="usr_role_id"/>
        <result property="usrFlag" column="usr_flag"/>

        <association property="role" column="usr_role_id" javaType="role">
            <id property="roleId" column="role_id"/>
            <result property="roleName" column="role_name"/>
            <result property="roleFlag" column="role_flag"/>
            <result property="roleDesc" column="role_desc"/>
        </association>
    </resultMap>

    <select id="findUser" resultMap="role_resultMap">
    select
    u.usr_id,
    u.usr_name,
    u.usr_password,
    u.usr_role_id,
    u.usr_flag,
    r.role_id,
    r.role_name,
    r.role_desc,
    r.role_flag
    from sys_user as u,sys_role as r
    where
    u.usr_role_id = r.role_id
    and
    u.usr_name=#{usr_name}
    and
    u.usr_password=#{usr_password}
    </select>

    <select id="findUsers" resultType="User">
        select * from sys_user
        <trim prefix="where" prefixOverrides="and">
            <if test="usr_id != null">
                usr_id = #{usr_id}
            </if>
            <if test="usr_name != null and usr_name != ''">
                and usr_name = #{usr_name}
            </if>
        </trim>
        ;
    </select>

    <select id="findById" resultType="User">
        select usr_id,
        usr_name,
        usr_password,
        usr_role_id,
        usr_flag
        from sys_user
        where
        usr_id = #{usr_id}
    </select>

        <select id="findByName" resultType="User">
        select usr_id,
        usr_name,
        usr_password,
        usr_role_id,
        usr_flag,
        role.role_name as usr_role_name
        from sys_user
        left join sys_role as role on role.role_id = usr_role_id
        where
        usr_name = #{usrName}
    </select>


    <update id="updateUser">
    </update>
    <delete id="deleteUser">
    </delete>
    <insert id="addUser">
    </insert>
</mapper>